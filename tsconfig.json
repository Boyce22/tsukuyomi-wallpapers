{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist", // pasta onde o JS compilado vai
    "rootDir": "src", // pasta raiz do TS fonte
    "sourceMap": true // gera sourcemap para facilitar debug
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
